<%- include('partials/head') %>
<article class="container">
    <a href="/lessons" >
        <img src="/images/icons/Caret left.svg" alt="caret left">
    </a>
    
   
    <h1 class="heading">All stories </h1>
    <div class="searchbar">
        <img class="search-icon" src="/images/icons/search.svg" alt="search icon">
        <input type="text" id="search-story" placeholder=" Search for stories">
    </div>
    

    <section class="all-catogory">
        <button class="Filter white-text">Animal</button>
        <button class="Filter white-text">Season</button>
        <button class="Filter white-text">Language</button>
        <button class="Filter white-text">Sorting</button>
    </section>
    <section class="ul-lessons-stories"> 
        <% stories.forEach(story => {%>
            <article class="li-story">
                    <img class="img-story" src="https://fdnd-agency.directus.app/assets/<%= story.image %>" alt="story image">
                    <h2 class="story-title">
                         <%= story.title %> 
                    </h2> 
                    <p class="story-summary"> 
                        <%= story.summary %>
                    </p>
                    <img class="image-flag" src="/images/icons/engelse-flag.svg" alt="flag">
                    <div class="story-interactions">
                        <img class="icon-playbutton" src="/images/icons/play-button.svg" alt="play button icon">
                        <img class="icon-download" src="/images/icons/cloud-download-outline.svg" alt="download icon">
                        <button class="btn-add">
                            <img class="icon-add" src="/images/icons/106230_add_icon.svg" alt="add button">
                        </button> 
                    </div>
            </article>
       <% });  %>
    </section>
 
   
    </section>
</article>

